<%= simple_form_for @vehicle, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :plate %>
  <%= error_span(@vehicle[:plate]) %>
  <%= f.input :brand %>
  <%= error_span(@vehicle[:brand]) %>
  <%= f.input :model %>
  <%= error_span(@vehicle[:model]) %>
  <%= f.input :color %>
  <%= error_span(@vehicle[:color]) %>
  <%= f.input :air %>
  <%= error_span(@vehicle[:air]) %>
  <%= f.input :status, :as => :hidden, :input_html => { :value => 'ACT' } %>
  <%= error_span(@vehicle[:status]) %>
  <%= f.input :passengers %>
  <%= error_span(@vehicle[:passengers]) %>
  <%= f.association :driver %>
  <%= error_span(@vehicle[:driver_id]) %>
  <%= f.association :service %>
  <%= error_span(@vehicle[:service_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicles_path(@driver, @service), :class => 'btn btn-default' %>
<% end %>
