<%= simple_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :current %>
  <%= error_span(@location[:current]) %>
  <%= f.input :location1 %>
  <%= error_span(@location[:location1]) %>
  <%= f.input :location2 %>
  <%= error_span(@location[:location2]) %>
  <%= f.input :location3 %>
  <%= error_span(@location[:location3]) %>
  <%= f.input :location4 %>
  <%= error_span(@location[:location4]) %>
  <%= f.input :location5 %>
  <%= error_span(@location[:location5]) %>
  <%= f.input :vehicle_id %>
  <%= error_span(@location[:vehicle_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn btn-default' %>
<% end %>
