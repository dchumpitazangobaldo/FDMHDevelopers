<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:current) %>:</strong></dt>
  <dd><%= @location.current %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location1) %>:</strong></dt>
  <dd><%= @location.location1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location2) %>:</strong></dt>
  <dd><%= @location.location2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location3) %>:</strong></dt>
  <dd><%= @location.location3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location4) %>:</strong></dt>
  <dd><%= @location.location4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location5) %>:</strong></dt>
  <dd><%= @location.location5 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_id) %>:</strong></dt>
  <dd><%= @location.vehicle_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              locations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_location_path(@location), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              location_path(@location),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
