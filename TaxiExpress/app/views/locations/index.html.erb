<%- model_class = Location -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:current) %></th>
      <th><%= model_class.human_attribute_name(:location1) %></th>
      <th><%= model_class.human_attribute_name(:location2) %></th>
      <th><%= model_class.human_attribute_name(:location3) %></th>
      <th><%= model_class.human_attribute_name(:location4) %></th>
      <th><%= model_class.human_attribute_name(:location5) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.id, location_path(location) %></td>
        <td><%= location.current %></td>
        <td><%= location.location1 %></td>
        <td><%= location.location2 %></td>
        <td><%= location.location3 %></td>
        <td><%= location.location4 %></td>
        <td><%= location.location5 %></td>
        <td><%= location.vehicle_id %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_location_path(location), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      location_path(location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_location_path,
            :class => 'btn btn-primary' %>
