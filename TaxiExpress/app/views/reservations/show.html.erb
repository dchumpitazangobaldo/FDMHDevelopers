<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pickupdate) %>:</strong></dt>
  <dd><%= @reservation.pickupdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pickuptime) %>:</strong></dt>
  <dd><%= @reservation.pickuptime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:origin) %>:</strong></dt>
  <dd><%= @reservation.origin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:destiny) %>:</strong></dt>
  <dd><%= @reservation.destiny %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @reservation.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:npassengers) %>:</strong></dt>
  <dd><%= @reservation.npassengers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @reservation.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency) %>:</strong></dt>
  <dd><%= @reservation.currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profile_id) %>:</strong></dt>
  <dd><%= @reservation.profile_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vehicle_id) %>:</strong></dt>
  <dd><%= @reservation.vehicle_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_id) %>:</strong></dt>
  <dd><%= @reservation.service_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
