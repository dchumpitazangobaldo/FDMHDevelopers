<%= simple_form_for @profile, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@profile[:name]) %>
  <%= f.input :lastname %>
  <%= error_span(@profile[:lastname]) %>
  <%= f.input :address %>
  <%= error_span(@profile[:address]) %>
  <%= f.input :dni %>
  <%= error_span(@profile[:dni]) %>
  <%= f.input :telephone %>
  <%= error_span(@profile[:telephone]) %>
  <%= f.input :cellphone %>
  <%= error_span(@profile[:cellphone]) %>
  <%= f.input :email %>
  <%= error_span(@profile[:email]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profiles_path, :class => 'btn btn-default' %>
<% end %>
