<%= simple_form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@service[:name]) %>
  <%= f.input :paymentmethod, :label => "Payment Method" %>
  <%= error_span(@service[:paymentmethod]) %>
  <%= f.input :percentage %>
  <%= error_span(@service[:percentage]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                services_path(@service), :class => 'btn btn-default' %>
<% end %>
